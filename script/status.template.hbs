<html>
<head>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/patternfly/3.15.1/css/patternfly.css">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/patternfly/3.15.1/css/patternfly-additions.css">
  <style>
  .pf-design-table {
    width: auto;margin: auto;
  }
  .pf-design-table__row {
    text-align: center;
  }
  .pf-design-table__row--missing {
    background-color: #ffe6e6;
  }
  .pf-design-table__icon {
    line-height: 1.66666667;
  }
  .pf-design-table__icon--new {
    color: #40199a;
  }
  .pf-design-table__icon--changed {
    color: #f5c12e;
  }
  .pf-design-table__icon--present {
    color: #2d7623;
  }
  .pf-design-table__icon--missing {
    color: #a30000;
  }
  </style>
</head>
<body>
  <table class="table table-striped pf-design-table" >
    {{#each families}}
      <tbody>
        <tr><th colspan="4"><h2>{{name}}</h2></th></tr>
        <tr><th>Pattern</th><th>overview.md</th><th>design.md</th><th>site.md</th></tr>
        {{#each patterns}}
          <tr>
            <td>{{name}}</td>
            {{#eachInMap files }}
              {{#if value.exists}}
                <td class="pf-design-table__row">
                  {{#if value.changed.isChanged}}
                    {{#if value.changed.isNew}}
                      <span class="fa fa-file-text-o pf-design-table__icon pf-design-table__icon--new" title="New: Last modified on {{ value.changed.dateFormatted }}"></span>
                    {{else}}
                      <span class="fa fa-file-text-o pf-design-table__icon pf-design-table__icon--changed" title="Changed: Last modified on {{ value.changed.dateFormatted }}"></span>
                    {{/if}}
                  {{else}}
                    <span class="fa fa-file-text pf-design-table__icon pf-design-table__icon--present" title="Last modified on {{ value.changed.dateFormatted }}"</span>
                  {{/if}}
                </td>
                {{else}}
                <td class="pf-design-table__row pf-design-table__row--missing">
                  <span class="pficon pficon-close pf-design-table__icon pf-design-table__icon--missing"></span>
                </td>
              {{/if}}
            {{/eachInMap}}
          </tr>
        {{/each}}
      </tbody>
    {{/each}}
  </table>
</body>
</html>
