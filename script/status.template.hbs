<html>
<head>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/patternfly/3.15.1/css/patternfly.css">
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/patternfly/3.15.1/css/patternfly-additions.css">
  <style>
  .pf-design-table {
    width: auto;margin: auto;
  }
  .pf-design-table__cell {
    text-align: center;
  }
  .pf-design-table__cell--new {
    /*background-color: #bee1f4;*/
  }
  .pf-design-table__cell--changed {
    /*background-color: #f9d67a;*/
  }
  .pf-design-table__cell--present {
    /*background-color: #c8eb79;*/
  }
  .pf-design-table__cell--missing {
    background-color: #ffe6e6;
  }
  .pf-design-table__icon {
    line-height: 1.66666667;
  }
  .pf-design-table__icon--new {
    color: #00659c;
  }
  .pf-design-table__icon--changed {
    color: #b58100;
  }
  .pf-design-table__icon--present {
    color: #2d7623;
  }
  .pf-design-table__icon--missing {
    color: #a30000;
  }
  </style>
</head>
<body>
  <table class="table table-striped pf-design-table" >
    <tbody>
      <tr><th colspan="4"><h2>File status indicators</h2></th></tr>
      <tr></tr>
      <tr><td colspan="4">
        <span><span class="fa fa-file-text pf-design-table__icon pf-design-table__icon--new"></span> File is present and created within the past week</span><br>
        <span><span class="fa fa-file-text pf-design-table__icon pf-design-table__icon--changed"></span> File is present and modified within the past week</span><br>
        <span><span class="fa fa-file-text-o pf-design-table__icon pf-design-table__icon--present"></span> File is present</span><br>
        <span><span class="pficon pficon-close pf-design-table__icon pf-design-table__icon--missing"></span> File is missing</span><br>
      </td></tr>
    </tbody>

    {{#each families}}
      <tbody>
        <tr><th colspan="4"><h2>{{name}}</h2></th></tr>
        <tr><th>Pattern</th><th>overview.md</th><th>design.md</th><th>site.md</th></tr>
        {{#each patterns}}
          <tr>
            <td>{{name}}</td>
            {{#eachInMap files }}
              <td class="pf-design-table__cell pf-design-table__cell--{{ value.cssClass }}">
              {{#if value.exists}}
                {{#if value.changed.isChanged}}
                  <span class="fa fa-file-text pf-design-table__icon pf-design-table__icon--{{ value.cssClass }}" title="{{ value.cssClass }}: Last modified on {{ value.changed.dateFormatted }}"></span>
                {{else}}
                  <span class="fa fa-file-text-o pf-design-table__icon pf-design-table__icon--{{ value.cssClass }}" title="{{ value.cssClass }}: Last modified on {{ value.changed.dateFormatted }}"></span>
                {{/if}}
              {{else}}
                <span class="pficon pficon-close pf-design-table__icon pf-design-table__icon--missing"></span>
              {{/if}}
              </td>
            {{/eachInMap}}
          </tr>
        {{/each}}
      </tbody>
    {{/each}}
  </table>
</body>
</html>
